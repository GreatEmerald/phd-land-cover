@article{colditz_land_2011,
	title = {Land cover classification with coarse spatial resolution data to derive continuous and discrete maps for complex regions},
	volume = {115},
	issn = {0034-4257},
	url = {http://www.sciencedirect.com/science/article/pii/S0034425711002549},
	doi = {10.1016/j.rse.2011.07.010},
	abstract = {Regularly updated land cover information at continental or national scales is a requirement for various land management applications as well as biogeochemical and climate modeling exercises. However, monitoring or updating of map products with sufficient spatial detail is currently not widely practiced due to inadequate time-series coverage for most regions of the Earth. Classifications of coarser spatial resolution data can be automatically generated on an annual or finer time scale. However, discrete land cover classifications of such data cannot sufficiently quantify land surface heterogeneity or change. This study presents a methodology for continuous and discrete land cover mapping using moderate spatial resolution time series data sets. The method automatically selects sample data from higher spatial resolution maps and generates multiple decision trees. The leaves of decision trees are interpreted considering the sample distribution of all classes yielding class membership maps, which can be used as estimates for the diversity of classes in a coarse resolution cell. Results are demonstrated for the heterogeneous, small-patch landscape of Germany and the bio-climatically varying landscape of South Africa. Results have overall classification accuracies of 80\%. A sensitivity analysis of individual modules of the classification process indicates the importance of appropriately chosen features, sample data balanced among classes, and an appropriate method to combine individual classifications. The comparison of classification results over several years not only indicates the method's consistency, but also its potential to detect land cover changes.},
	number = {12},
	urldate = {2018-07-16},
	journal = {Remote Sensing of Environment},
	author = {Colditz, R. R. and Schmidt, M. and Conrad, C. and Hansen, M. C. and Dech, S.},
	month = dec,
	year = {2011},
	keywords = {read, Change detection, MODIS, land cover change, relevant, Accuracy assessment, fractional land cover mapping, fuzzy land cover updating, Decision trees, Land cover classification, Class memberships, Germany, South Africa, paramount},
	pages = {3264--3275},
	annote = {Says that trees have difficulties with unbalanced designs and cites Hansen 2000
Says there is still a need to find out about how to assess classifications with fractional estimates for each class. Suggests entropy, distance and sub-pixel confusion matrices.
Cites Friedl 2002 to say that non-parametric models are better for mapping in case the distributions are multimodal. But unbalanced designs are bad for machine learning because they dominate branches (cites Hansen 2000).
At the same time, they find that bias in sampling certain classes actually leads to better accuracies. In other words, good to sample more for classes that are hard to distinguish.
Using fractional mapping is more accurate than discretising it.
Did land cover updating too! Noticed that yearly variability (dryer/wetter years) are represented, transitional zones change. For statistics, they subtracted and looked for each class for positive or negative changes for a barchart, and also a spatial map with paired year comparisons.
Says that users usually want a discrete map, but that can be generated, and you even get a "confidence" measure.
Fractional mapping is great for transition zones and mixed landscapes. Says that it's not great to include mosaic classes, but rather it would be better to just have pure classes and derive the mixed ones from them (but they didn't test!)
Touts that it's stable and doesn't show significant false changes between the years.
Suggests including all covariates, including soil and climate. Stresses importance of time series.},
	file = {ScienceDirect Full Text PDF:/home/dainius/Zotero/storage/GUGY434N/Colditz et al. - 2011 - Land cover classification with coarse spatial reso.pdf:application/pdf}
}


@article{uma_shankar_wavelet-fuzzy_2011,
	title = {Wavelet-fuzzy hybridization: {Feature}-extraction and land-cover classification of remote sensing images},
	volume = {11},
	issn = {1568-4946},
	shorttitle = {Wavelet-fuzzy hybridization},
	url = {http://www.sciencedirect.com/science/article/pii/S1568494610003017},
	doi = {10.1016/j.asoc.2010.11.024},
	abstract = {A wavelet feature based supervised scheme for fuzzy classification of land covers in multispectral remote sensing images is proposed. The proposed scheme is developed in the framework of wavelet-fuzzy hybridization, a soft computing approach. The wavelet features obtained from wavelet transform on an image provides spatial and spectral characteristics (i.e., texture information) of pixels and hence can be utilized effectively for improving accuracy in classification, instead of using original spectral features. Four different fuzzy classifiers are considered for this purpose and evaluated using different wavelet features. Wavelet feature based fuzzy classifiers produced consistently better results compared to original spectral feature based methods on various images used in the present investigation. Further, the performance of the Biorthogonal3.3 (Bior3.3) wavelet is observed to be superior to other wavelets. This wavelet in combination with fuzzy product aggregation reasoning-rule outperformed all other methods. Potentiality of the proposed soft computing approach in isolating various land covers are evaluated both visually and quantitatively using indexes like β measure of homogeneity and Xie-Beni measure of compactness and separability.},
	number = {3},
	urldate = {2018-07-13},
	journal = {Applied Soft Computing},
	author = {Uma Shankar, B. and Meher, Saroj K. and Ghosh, Ashish},
	month = apr,
	year = {2011},
	keywords = {read, Remote sensing, relevant, Markov random fields, fractional land cover mapping, Fuzzy classification, Land cover classification, Soft computing, Wavelet features, Wavelet transform, fuzzy K-nearest neighbor algorithm, fuzzy rule-based system},
	pages = {2999--3011},
	annote = {Includes a list of algorithms that were proposed in the past, many of them I haven't heard (hierarchical, fuzzification-MIN-defuzzification rule-based, rule-based, aggregation)
Criticises k-NN, neural networks, ML for not taking spatial and temporal context into account, suggests Markov Random Fields for classification.
Tested wavelet transform to get spatiotemporal multispectral features, then fed it to models: fuzzy k-NN, fuzzy ML, fuzzy explicit and fuzzy product aggregation reasoning rule (FPARR).
Suggests first analysing coarse pixels, then finer ones, in order to take context into account. That's how wavelet transform works: you decompose components into sort of edge-detects of horizontal, vertical and diagonal, and you build up pyramid layers. Then that data can be fed into a classifier, and it contains information about the spatial context too.
Fuzzy k-NN is basically fuzzy c-means, except that it takes k neighbours' centroids rather than the centroid of the whole set. It will be the same if k=N. (Actually, supervised fuzzy c-means is in fact a fuzzy nearest centroid classifier.)
Wavelet transform helps with separation of classes, and the resulting hard imagery is also very slightly better. They didn't look into a confusion matrix, though, and the classes were a bit arbitrary (probably from clustering).
Fuzzy k-NN and fuzzy ML were the worst, fuzzy explicit (similar to FuzzyNPC) was better, and FRBS was the best, with or without wavelet data.},
	file = {ScienceDirect Full Text PDF:/home/dainius/Zotero/storage/HTJUT2PY/Uma Shankar et al. - 2011 - Wavelet-fuzzy hybridization Feature-extraction an.pdf:application/pdf}
