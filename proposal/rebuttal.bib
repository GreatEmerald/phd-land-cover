	author = {Chatterjee, Sankhadeep and Ghosh, Subhodeep and Dawn, Subham and Hore, Sirshendu and Dey, Nilanjan},
	year = {2016},
	doi = {10.1007/978-81-322-2757-1_23},
	keywords = {read, Neural network, Random forest, Random Forest classification, relevant, fuzzy c-means, Support vector machines, genetic algorithm},
